# NPM Configuration for Enhanced Security

# Always save exact versions (no ^ or ~ ranges)
save-exact=true

# Require package integrity verification
package-lock=true

# Only use HTTPS registry
registry=https://registry.npmjs.org/

# Audit automatically on install
audit=true

# Audit level (low, moderate, high, critical)
audit-level=moderate

# Automatically fix vulnerabilities when possible
# fund=false  # Disable funding messages for cleaner output

# Progress indicators
progress=true

# Engine strict mode (enforce engine requirements)
engine-strict=true

# Optional: Corporate/private registry settings (uncomment if needed)
# registry=https://your-private-registry.com/
# //your-private-registry.com/:_authToken=${NPM_TOKEN}

# Optional: Disable analytics for privacy
# disable-progress=true
# fund=false
# update-notifier=false